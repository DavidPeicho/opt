#version 450

struct Ray {
  vec3 color;
};

layout(std430, set = 0, binding = 0) readonly buffer buf {
    vec3 colors[ ];
};

layout(std430, set = 0, binding = 1) buffer RayOut {
    Ray results[ ];
};

void main() {
    vec3 c = colors[gl_GlobalInvocationID.x];
    results[gl_GlobalInvocationID.x].color = c;
}
